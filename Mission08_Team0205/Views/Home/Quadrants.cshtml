@model List<Mission08_Team0205.Models.TaskModel>

<style>

    .quadrant {
        border: 1px solid #ddd;
        padding: 10px;
    }

    .header {
        text-align: center;
        font-weight: bold;
        margin-bottom: 10px;
    }
</style>

<h2>Quadrants View</h2>

<div class="row">
    <!-- Urgent and Important -->
    <div class="quadrant col-lg-6">
        <div class="header">Urgent and Important</div>
        @if (Model.Any(t => t.Quadrant == 1 && t.CompletedTask == false))
        {
            foreach (var task in Model.Where(t => t.Quadrant == 1 && t.CompletedTask == false))
            {
                <div class="task">
                    <p><strong>Task ID:</strong> @task.TaskId</p>
                    <p><strong>Task Name:</strong> @task.TaskName</p>
                    <p><strong>Due Date:</strong> @task.DueDate</p>
                    <p><strong>Category:</strong> @(task.Category != null ? task.Category.CategoryName : "N/A")</p>
                    <div class="task-actions">
                        <a class="btn btn-info" asp-controller="Home" asp-action="Edit" asp-route-id="@task.TaskId">Edit</a>
                        <a class="btn btn-danger" asp-controller="Home" asp-action="Delete" asp-route-id="@task.TaskId">Delete</a>
                        <a class="btn btn-success" asp-controller="Home" asp-action="MarkCompleted" asp-route-id="@task.TaskId">Mark Completed</a>
                    </div>
                </div>
            }
        }
        else
        {
            <p>No Tasks in Quadrant 1</p>
        }
    </div>

    <!-- Urgent and Not Important -->
